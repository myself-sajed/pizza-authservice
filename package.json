{
    "name": "pizza-authservice",
    "version": "1.0.0",
    "description": "Pizza auth service for authentication",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon --legacy-watch ./src/Server.ts",
        "format": "prettier . --write",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepare": "husky install",
        "test": "jest --watch --runInBand",
        "docker" : "docker run --rm -it -v ${PWD}:/usr/src/app -v /usr/src/app/node_modules --env-file ${PWD}/.env -p 5000:5000  auth-service:dev"
    },
    "author": "Shaikh Sajed <shaikhsajedcoolpop@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@types/express": "^4.17.18",
        "@types/jest": "^29.5.5",
        "@types/node": "^20.7.1",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^14.0.1",
        "prettier": "3.0.3",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint",
            "npm run format"
        ]
    },
    "dependencies": {
        "@types/http-errors": "^2.0.2",
        "@types/supertest": "^2.0.13",
        "@types/winston": "^2.4.4",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "http-errors": "^2.0.0",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "winston": "^3.10.0"
    }
}
